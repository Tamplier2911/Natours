extends base

block append head
    script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js" async)
    script(type="text/javascript" src="/js/login.js" async)

block content
    main.main
        div.login-form
            h2.heading-secondary.ma-bt-lg Log into your account
            form.form
                div.form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='email@example.com', required)
                div.form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                div.form__group
                    button.btn.btn--green Login